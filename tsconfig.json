{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "module": "NodeNext",
    "target": "es2022",
    "lib": ["ES2022", "DOM"],
    "types": ["node"],
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test-project", "test-project-env-comments"]
}
